-- Create Schema
DROP TABLE pokemonDB.Users;
DROP SCHEMA pokemonDB RESTRICT;
CREATE SCHEMA pokemonDB;
--Create Tables
CREATE TABLE pokemonDB.Users
(
	ID INTEGER NOT NULL GENERATED ALWAYS AS IDENTITY(START WITH 1, INCREMENT BY 1),
	firstName VARCHAR(25) NOT NULL,
	lastName VARCHAR(25) NOT NULL,
	userName VARCHAR(25) NOT NULL,
	Password VARCHAR(25) NOT NULL,
	Email VARCHAR(25) NOT NULL,
	gender INTEGER NOT NULL,
	CONSTRAINT primary_key PRIMARY KEY (ID)
);
CREATE TABLE pokemonDB.Cards
(
	ID INTEGER NOT NULL GENERATED ALWAYS AS IDENTITY(START WITH 1, INCREMENT BY 1),
	Name VARCHAR(25) NOT NULL,
	Hp INTEGER NOT NULL,
	Stage VARCHAR(40) NOT NULL,
    Weakness VARCHAR(40) NOT NULL,
    Resistance VARCHAR(40) NOT NULL,
    Retreat VARCHAR(40) NOT NULL,
	Rarity INTEGER NOT NULL,
	Abilities VARCHAR(40) NOT NULL,
	Price FLOAT NOT NULL,
	CONSTRAINT primary_key1 PRIMARY KEY (ID)
);